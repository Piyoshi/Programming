<h1>Listing members</h1>
<%= content_tag 'p', '＊登録されているメンバーのリストです', {:style => "color:red"} %>
<table>
  <tr>
    <th>User</th>
    <th>Pass</th>
    <th>Name</th>
    <th>Mail</th>
    <th>Memo</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.user %></td>
    <td><%= member.pass %></td>
    <td><%= member.name %></td>
    <td><%= member.mail %></td>
    <td><%= member.memo %></td>
    <td><%= member.admin %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<% if session[:login].admin %>
<%= link_to 'New Member', new_member_path %>
<% end %>
<%= link_to 'messages', {:controller => 'messages', :action => 'index'} %>
