<h1>Login</h1>
<%= form_for(@member, :url => {:action => 'login'}) do |f| %>
		
	<% if @member.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@member.errors.count, "error") %>
			<ul>
			<%= @member.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</h2>
	</div>	
	<% end %>

	<div class="field">
		<%= f.label :user %><br />
		<%= f.text_field :user %>
	</div>
	<div class="field">
		<%= f.label :pass %><br />
		<%= f.password_field :pass %>
	</div>
	<div class="actions">
		<%= f.submit :value => "login" %>
	</div>

<% end %>
