<h1>Listing messages</h1>
<%= content_tag 'p', "＊あなたがFriend登録したメンバーのメッセージです。" %>
<% if @messages.present? then %>
<% @messages.each do |message| %>
	<div class="message_area">
		<p class="member_name"><a href="/members/<%= message.member.id %>"><%= message.member.name %></a></p>
		<p class="message_content"><%= link_to message.content, message %></p>
		<p class="message_create">(<%= message.created_at.strftime '%Y-%m-%d %H:%M' %>)</p>
	</div>
	</tr>
<% end %>
<% end %>

<p>page: <% if (@page.to_i - 1 > 0) %>
	<%= link_to (@page.to_i - 1).to_s, :action => "index", :page => (@page.to_i - 1) %>/
<% end %>
<b><%= @page.to_s %></b>
<% if (@page.to_i + 1) <= @max_page %>
	/<%= link_to (@page.to_i + 1).to_s, :action => "index", :page => (@page.to_i + 1) %>
<% end %></p>

